{
  "name": "hidden-character-detector",
  "publisher": "yusufdanis",
  "displayName": "Hidden Character Detector",
  "description": "Scans and detects potentially problematic hidden or invisible characters in your project.",
  "version": "0.0.2",
  "icon": "icons/hcd-logo.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "hidden",
    "invisible",
    "character",
    "unicode",
    "zero-width",
    "scan",
    "detect",
    "lint",
    "vibe coding",
    "cursor",
    "windsurf",
    "ai"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hiddenCharacterDetector.scanActiveEditor",
        "title": "Hidden Character: Scan Active Editor",
        "category": "Hidden Character Detector"
      }
    ],
    "configuration": {
      "title": "Hidden Character Detector",
      "properties": {
        "hiddenCharacterDetector.scanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Scan files for hidden characters when they are saved."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yusufdanis/hidden-character-detector.git"
  },
  "bugs": {
    "url": "https://github.com/yusufdanis/hidden-character-detector/issues"
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.2"
  }
}
